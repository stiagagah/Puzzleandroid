        android:layout_alignStart="@+id/nomer6"
        android:layout_below="@+id/nomer6"
        android:ems="10"
        android:hint="Nilai 7"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="66dp" />

    <EditText
        android:id="@+id/nomer8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomer7"
        android:layout_alignStart="@+id/nomer7"
        android:layout_below="@+id/nomer7"
        android:ems="10"
        android:hint="Nilai 8"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="66dp" />

    <EditText
        android:id="@+id/nomer9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomer8"
        android:layout_alignStart="@+id/nomer8"
