    <EditText
        android:id="@+id/nomer5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomer4"
        android:layout_alignStart="@+id/nomer4"
        android:layout_below="@+id/nomer4"
        android:ems="10"
        android:hint="Nilai 5"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="66dp" />

    <EditText
        android:id="@+id/nomer6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
